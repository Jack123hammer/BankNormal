        xmlns:local="clr-namespace:BankNormal.Windows"
        mc:Ignorable="d"
        Title="UserWindow" Height="200" Width="200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btn_confirm" Content="Подтвердить" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top" Width="172" RenderTransformOrigin="-0.45,1.126" Click="btn_confirm_Click"/>
        <TextBox x:Name="tb_code" HorizontalAlignment="Left" Height="23" Margin="10,52,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="172"/>
